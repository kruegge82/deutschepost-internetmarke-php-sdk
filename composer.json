{
    "name": "kruegge82/deutschepost-internetmarke-php-sdk",
    "description": "Division: Post & Parcel Germany<br /> The INTERNETMARKE is the online-postage for mail products of Deutsche Post AG.",
    "keywords": [
        "php",
        "sdk",
        "Deutsche Post",
        "api",
        "Internetmarke"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jahn N."
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.4.5",
        "guzzlehttp/psr7": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "overtrue/phplint": "^9.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": { "kruegge82\\DPIM\\" : "src/" }
    },
    "autoload-dev": {
        "psr-4": { "kruegge82\\DPIM\\Test\\" : "tests/" }
    },
    "scripts": {
        "test": [
            "@phplint"
        ],
        "phplint": "phplint"
    }
}
